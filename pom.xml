	<groupId>com.planittesting.automation</groupId>
	<artifactId>seleniumJupiterToys-java</artifactId>
	<version>2.0.0</version>
	<packaging>jar</packaging>

	<name>SeleniumJupiterToys-Java</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java-version>21</java-version>
		<log-level>info</log-level>
		<parallel-test>true</parallel-test>
		<parallel-strategy>dynamic</parallel-strategy>
		<parallel-fixed-level>4</parallel-fixed-level>
		<include-tags />
